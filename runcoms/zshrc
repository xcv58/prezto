# The next line updates PATH for the Google Cloud SDK.
function _load_gcloud() {
  _lazy_source gcloud_path "${ZDOTDIR:-$HOME}/google-cloud-sdk/path.zsh.inc"
  _lazy_source gcloud_completion "${ZDOTDIR:-$HOME}/google-cloud-sdk/completion.zsh.inc"
}
_lazy_cmd_optional gcloud _load_gcloud "gcloud: not found or gcloud init failed"
_lazy_cmd_optional gsutil _load_gcloud "gsutil: not found or gcloud init failed"
_lazy_cmd_optional bq _load_gcloud "bq: not found or gcloud init failed"

# Go Version Manager
function _load_gvm() {
