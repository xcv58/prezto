typeset -gU path

function remove_path ()  {
  local target="${*}"
  path=(${path:#$target})
}

function insert_path () {
  local target="${*}"
  [[ -d "${target}" ]] || return 0
  path=("${target}" ${path:#$target})
}

function append_path () {
  local target="${*}"
  [[ -d "${target}" ]] || return 0
  path=(${path:#$target} "${target}")
}

function source_file() {
  # shellcheck disable=SC1090
  [[ -s "${*}" ]] && source "${*}"
}

typeset -gA _lazy_loaded

function _lazy_source() {
  local key="${1}"
  local file="${2}"
  if [[ -z "${_lazy_loaded[$key]}" ]]; then
    _lazy_loaded[$key]=1
    [[ -s "${file}" ]] && source "${file}"
  fi
}

function _lazy_run() {
  local key="${1}"
  shift
  if [[ -z "${_lazy_loaded[$key]}" ]]; then
    _lazy_loaded[$key]=1
    eval "${*}"
  fi
}

function _lazy_cmd() {
  local cmd="${1}"
  local loader="${2}"
  eval "function ${cmd}() { unset -f ${cmd}; ${loader}; if whence -w ${cmd} >/dev/null 2>&1; then eval \"${cmd} \\\"\\$@\\\"\"; else command ${cmd} \"\\$@\"; fi }"
}

function _lazy_cmd_optional() {
  local cmd="${1}"
  local loader="${2}"
  local message="${3}"
  eval "function ${cmd}() { unset -f ${cmd}; ${loader}; if whence -w ${cmd} >/dev/null 2>&1; then eval \"${cmd} \\\"\\$@\\\"\"; else print -u2 \"${message}\"; return 127; fi }"
}

function _lazy_eval() {
  local key="${1}"
  shift
  if [[ -z "${_lazy_loaded[$key]}" ]]; then
    _lazy_loaded[$key]=1
    eval "${*}"
  fi
}

autoload -Uz add-zsh-hook

function exportENV() {
  [[ -d $2 ]] && {
    export ${1}=${2}
  }
}

# clear Docker container by name
function clearContainer() {
  docker ps -q --filter "name=${1}" | xargs -n 1 docker stop
  docker ps -a -q --filter "name=${1}" | xargs -n 1 docker rm
}

