# OpenClaw Completion
function _load_openclaw_completion() {
  _lazy_run openclaw_completion "source <(openclaw completion --shell zsh)"
}
_lazy_cmd_optional openclaw _load_openclaw_completion "openclaw: not found or openclaw completion init failed"
