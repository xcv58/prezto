# zsh-abbr config - store in repo for portability
export ABBR_USER_ABBREVIATIONS_FILE="${ZDOTDIR:-$HOME}/.zprezto/config/zsh-abbr-user-abbreviations"

# zsh-abbr (fast cache-based loading)
# Full zsh-abbr takes ~600ms due to parsing. This uses cached arrays (~10ms)
function _load_abbr_fast() {
    local cache_dir="${TMPDIR:-/tmp}/zsh-abbr"
    local user_file="$ABBR_USER_ABBREVIATIONS_FILE"

    # Check if cache exists and is valid
    if [[ -f "$cache_dir/regular-user-abbreviations" ]]; then
        # Load cached arrays directly (instant!)
        source "$cache_dir/regular-user-abbreviations" 2>/dev/null
        source "$cache_dir/global-user-abbreviations" 2>/dev/null

        # Self-healing: if cache is empty but user file has content, regenerate
        if (( ${#ABBR_REGULAR_USER_ABBREVIATIONS} == 0 )) && [[ -s "$user_file" ]]; then
            rm -rf "$cache_dir"
            source_file "${ZDOTDIR:-$HOME}/.zprezto/zsh-abbr/zsh-abbr.zsh"
            return
        fi

        # Set up minimal expansion widget (the key feature of zsh-abbr)
        function _abbr_expand_widget() {
            local abbr="${LBUFFER##* }"
            local expansion="${ABBR_REGULAR_USER_ABBREVIATIONS[\"$abbr\"]:-${ABBR_GLOBAL_USER_ABBREVIATIONS[\"$abbr\"]}}"
            if [[ -n "$expansion" ]]; then
                LBUFFER="${LBUFFER%$abbr}${(Q)expansion}"
            fi
        }
        zle -N _abbr_expand_widget

        # Bind space to expand (like zsh-abbr does)
        function _abbr_expand_and_space() {
            _abbr_expand_widget
            LBUFFER+=" "
        }
        zle -N _abbr_expand_and_space
        bindkey " " _abbr_expand_and_space

        # For full abbr command functionality, lazy-load full plugin
        function abbr() {
            unfunction abbr
            source "${ZDOTDIR:-$HOME}/.zprezto/zsh-abbr/zsh-abbr.zsh"
            abbr "$@"
        }
    else
        # No cache - fall back to full load (first time only)
        source_file "${ZDOTDIR:-$HOME}/.zprezto/zsh-abbr/zsh-abbr.zsh"
    fi
}

# Load on 2nd prompt for instant first prompt
_abbr_load_count=0
function _load_abbr_on_second_prompt() {
    (( _abbr_load_count++ ))
    if (( _abbr_load_count >= 2 )); then
        _load_abbr_fast
        add-zsh-hook -d precmd _load_abbr_on_second_prompt
        unset _abbr_load_count
    fi
}
autoload -Uz add-zsh-hook
add-zsh-hook precmd _load_abbr_on_second_prompt

