# zsh-abbr
autoload -Uz add-zle-hook-widget
function _load_abbr() {
  if [[ -z "${_lazy_loaded[abbr]}" ]]; then
    _lazy_loaded[abbr]=1
    _lazy_source abbr "${ZDOTDIR:-$HOME}/.zprezto/zsh-abbr/zsh-abbr.zsh"
  fi
}
function _abbr_lazy_init() {
  _load_abbr
  add-zle-hook-widget -d zle-line-init _abbr_lazy_init
}
add-zle-hook-widget zle-line-init _abbr_lazy_init

