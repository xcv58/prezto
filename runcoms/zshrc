function _load_nvm() {
  _lazy_source nvm "${NVM_DIR}/nvm.sh"
  _lazy_source nvm_completion "${NVM_DIR}/bash_completion"
}
_lazy_cmd_optional nvm _load_nvm "nvm: not found or nvm init failed"

function _load_conda() {
  local conda_bin="/Users/xcv58/miniconda3/bin/conda"
  if [[ -x "${conda_bin}" ]]; then
    __conda_setup="$("${conda_bin}" 'shell.zsh' 'hook' 2> /dev/null)"
    if [[ $? -eq 0 ]]; then
      eval "$__conda_setup"
    else
      if [[ -f "/Users/xcv58/miniconda3/etc/profile.d/conda.sh" ]]; then
        . "/Users/xcv58/miniconda3/etc/profile.d/conda.sh"
      else
        export PATH="/Users/xcv58/miniconda3/bin:$PATH"
      fi
    fi
    unset __conda_setup
  fi
}
_lazy_cmd_optional conda _load_conda "conda: not found or conda init failed"
_lazy_cmd_optional mamba _load_conda "mamba: not found or conda init failed"


